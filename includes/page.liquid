<!doctype html>
<html lang="{{ metadata.locale }}" prefix="og: https://ogp.me/ns#">
  <!--! Hello you curious user, if it helps you can see the full code over on GitHub: {{ metadata.repo }} -->
  
  <head>
    <!-- GoatCounter -->
    <script data-goatcounter="https://adamchamberlin.goatcounter.com/count" async src="//gc.zgo.at/count.js"></script>
    <!-- End GoatCounter -->
    {% include "partials/head.liquid" %}
  </head>
  
  <body>
    
    <a href="#skip" class="skip-link">Skip to main content</a>
    <div class="layout" role="document">
      {% include "partials/header.liquid" %}
      <main class="container main" id="#skip" tabindex="-1" data-input-path="{{ page.filePathStem }}">
        <div class="page">
          <header class="page--header">
            <h1 class="page--title p-name">{{ title }}</h1>
            <div class="tagline">
              {% if subhead %}
                <p>{{ subhead }}</p>
              {% endif %}
            </div><!-- .tagline -->
          </header><!-- .page--header -->
          <div class="page--content">
            {{ content }}
          </div>
        </div><!-- .page--content -->

        {% if related %}
          <aside class="related">
            <h2>Related Pages</h2>
            <ul>
            {% assign posts = related | getRelated: collections.page %}
            {% for post in posts %}
              <li>
                {% if post.data.category == 'article' %}
                  {% assetIcon 'article' %}
                  Also written -
                {% endif %}

                {% if post.data.category == 'note' %}
                  {% assetIcon "note" %}
                  Noted about -
                {% endif %}

                {% if post.data.category == 'rsvp' %}
                  {% assetIcon "rsvp" %}
                  Attended -
                {% endif %}

                {% if post.data.category == 'reply' %}
                  {% assetIcon "reply" %}
                  Commented to -
                {% endif %}

                {% if post.data.category == 'signup' %}
                  {% assetIcon "signup" %}
                  Original signup -
                {% endif %}

                {% if post.data.category == 'exercise' %}
                  {% assetIcon "stopwatch" %}
                  Training -
                {% endif %}

                {% if post.data.category == 'race' %}
                  {% assetIcon "trophy" %}
                  Race file -
                {% endif %}

                {% if post.data.category == 'checkin' %}
                  {% assetIcon "checkin" %}
                  Checked in -
                {% endif %}

                {% if post.data.tags contains 'page' %}
                  {% assetIcon "page" %}
                {% endif %}
                <a href="{{ post.url }}">
                  {{ post.data.title }}
                </a>
              </li>

            {% endfor %}
            </ul>
          </aside>
        {% endif %}

      </main>

      {% include "partials/footer.liquid" %}
    </div><!-- .container -->
  </body>
</html>
