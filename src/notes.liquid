---
layout: list.liquid
title: Notes Feed
subhead: These are the short form items of content.
description: This page is an archive of all the notes written on the site. This includes short form posts, RSVP's, checkins and replies.
pagination:
  data: collections.note
  size: 20
  reverse: true
permalink: /notes/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber }}/{% endif %}
eleventyComputed:
  title: "Notes Feed {% if pagination.pageNumber > 0 %} - Page {{ pagination.pageNumber }}{% endif %}"
---

<div class="activity--list--content">

  <ul>
  {%- for post in pagination.items -%}

    {% if post.data.category == 'note' %}
      <li class="note h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "note" %}
          Noodled about -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Continue to read {{ post.data.title }}">
            {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </li>

    {% elsif post.data.category == 'reply' %}
      <li class="reply h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "reply" %}
          Replied to -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Replied to {{ post.data.title }}">
            {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </li>

    {% elsif post.data.category == 'rsvp' %}
      <li class="reply h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "rsvp" %}
          RSVP'd to -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="RSVP'd to {{ post.data.title }}">
            {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </li>

    {% elsif post.data.category == 'videography' %}
      <li class="post h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "video" %}
          Shot -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="View video">
            {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </li>

    {% elsif post.data.category == 'photography' %}
      <li class="post h-entry hentry">
        <h2 class="p-name">
          Snapped -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="View photo">
            {{ post.data.to }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </li>

    {% elsif post.data.category == 'checkin' %}
      <li class="checkin h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "checkin" %}
          Checked in at -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Checked in on {{ post.date | dateLongDate }}">
            {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </li>

    {% elsif post.data.category == 'movie' %}
      <li class="movie h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "movie" %}
          Watched -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Watched on {{ post.date | dateLongDate }}">
            {{ post.data.title }}
          </a>
        </h2>
        <img src="{{ post.data.cover }}" eleventy:ignore>

        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </li>

    {% elsif post.data.category == 'listen' %}
      <li class="listen h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "music" %}
          Listened to -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Listened on {{ post.date | dateLongDate }}">
            {{ post.data.title }}
          </a>
          by {{ post.data.artist }}
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </li>

    {% elsif post.data.category == 'toot' %}
      <li class="toot h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "tooted" %}
          Tooted -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Checked in on {{ post.date | dateLongDate }}">
            {{ post.data.title | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </li>

    {% else %}
      <li class="h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "unknown" %}
          Mumbled about -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="View Item">
            {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </li>
    {% endif %}

  {%- endfor -%}
  </ul>

</div><!-- .post-list-content -->

<section class="pagination">
  <div class="pagination--content">
    <nav id="post--pagination" class="post--pagination" aria-labelledby="post--pagination">
      <div class="previous-posts">
        {% if pagination.href.previous %}
          <a href="{{ pagination.href.previous }}" title="Head to the future">« Newer Posts</a>
        {% endif %}
      </div><!-- .previous-posts -->
      <div class="next-posts">
        {% if pagination.href.next %}
          <a href="{{ pagination.href.next }}" title="Go back in time">Older Posts »</a>
        {% endif %}
      </div><!-- .next-posts -->
    </nav><!-- .post-pagination -->
  </div><!-- .pagination-content -->
</section><!-- .pagination -->
