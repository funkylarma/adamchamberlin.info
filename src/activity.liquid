---
layout: list.liquid
subhead: My digital life in list form
description: "Most of my digital activity in one page, the entries link through to the content in question. Toots, Scrobbles and Movies are populated from RSS, everything else is locally stored."
tags:
  page
pagination:
  data: collections.allContent
  size: 50
  reverse: true
permalink: /activity/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber }}/{% endif %}
eleventyComputed:
  title: "Activity Feed {% if pagination.pageNumber > 0 %} - Page {{ pagination.pageNumber }}{% endif %}"
---

<div class="activity--list--content">

  <ul>
  {%- for post in pagination.items -%}

    {% if post.data.category == 'article' %}
      <li class="post h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "article" %}
          Wrote -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Wrote {{ post.data.title | escape | strip_html }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'bookmark' %}
      <li class="bookmark h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "bookmark" %}
          Bookmarked -
          <a class="post-link u-url" rel="noopener noreferrer" href="{{ post.data.url }}" title="Bookmarked {{ post.data.title | escape }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'checkin' %}
      <li class="checkin h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "checkin" %}
          Checked in at -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Checked in on {{ post.date | dateLongDate }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'exercise' %}
      <li class="exercise h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "stopwatch" %}
          Went {{ post.data.sport }} -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Went {{ post.data.sport }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'jam' %}
      <li class="jam h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "jam" %}
          Vibing to -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Jamming to {{ post.data.title | escape }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'like' %}
      <li class="bookmark h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "heart" %}
          Liked -
          <a class="post-link u-url" rel="bookmark" href="{{ post.data.url }}" title="Bookmarked {{ post.data.title | escape }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'listen' %}
      <li class="listen h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "headphones" %}
          Listened to -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Listened on {{ post.date | dateLongDate }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
          by {{ post.data.artist | escape | strip_html | truncate: 50 }}
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'movie' %}
      <li class="movie h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "movie" %}
          Watched -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Watched on {{ post.date | dateLongDate }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'note' %}
      <li class="note h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "note" %}
          Noodled about -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Continue to read {{ post.data.title | escape | strip_html }}">
            {{ post.data.title | escape }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'photography' %}
      <li class="post h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "photo" %}
          Snapped -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="View photo">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'race' %}
      <li class="race h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "trophy" %}
          Raced -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Raced {{ post.data.title | escape | strip_html }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'reply' %}
      <li class="reply h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "reply" %}
          Replied to -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Replied to {{ post.data.title | escape | strip_html }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'repost' %}
      <li class="reply h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "boost" %}
          Boosted -
          <a class="post-link u-url" rel="noopener noreferrer" href="{{ post.data.url }}" title="Reposted {{ post.data.title | escape | strip_html }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'rsvp' %}
      <li class="reply h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "rsvp" %}
          RSVP'd to -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="RSVP'd to {{ post.data.title | escape | strip_html }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'signup' %}
      <li class="signup h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "signup" %}
          Signed up for -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Signed up for {{ post.data.title | escape | strip_html }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'toot' %}
      <li class="toot h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "tooted" %}
          Tooted -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Tooted {{ post.data.title | escape | strip_html }}">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

    {% if post.data.category == 'videography' %}
      <li class="post h-entry hentry">
        <h2 class="p-name">
          {% assetIcon "video" %}
          Shot -
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="View video">
            {{ post.data.title | escape | strip_html | truncate: 50 }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDateShortMonth }}</time>
      </li>
    {% endif %}

  {%- endfor -%}
  </ul>

</div><!-- .post-list-content -->

<section class="pagination">
  <div class="pagination--content">
    <nav id="post--pagination" class="post--pagination" aria-labelledby="post--pagination">
      <div class="previous-posts">
        {% if pagination.href.previous %}
          <a href="{{ pagination.href.previous }}" title="Head to the future">« Newer Posts</a>
        {% endif %}
      </div><!-- .previous-posts -->
      <div class="next-posts">
        {% if pagination.href.next %}
          <a href="{{ pagination.href.next }}" title="Go back in time">Older Posts »</a>
        {% endif %}
      </div><!-- .next-posts -->
    </nav><!-- .post-pagination -->
  </div><!-- .pagination-content -->
</section><!-- .pagination -->
