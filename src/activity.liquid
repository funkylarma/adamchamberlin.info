---
layout: list.liquid
title: "Adam Chamberlin"
pagination:
  data: collections.contentList
  size: 40
  reverse: true
permalink: /activity/{% if pagination.pageNumber > 0 %}page-{{ pagination.pageNumber }}/{% endif %}
eleventyComputed:
  title: "Activity Feed {% if pagination.pageNumber > 0 %} - Page {{ pagination.pageNumber }}{% endif %}"
---

<div class="activity--list--content">

  {%- for post in pagination.items -%}

    {% if post.data.category == 'article' %}
      <article class="post h-entry hentry">
        <h2 class="p-name">
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Wrote {{ post.data.to }}">
            {% assetIcon "article" %}
            {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </article>

    {% elsif post.data.category == 'note' %}
      <article class="note h-entry hentry">
        <h2 class="p-name">
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Continue to read {{ post.data.title }}">
            {% assetIcon "note" %}
            {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </article>

    {% elsif post.data.category == 'reply' %}
      <article class="reply h-entry hentry">
        <h2 class="p-name">
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Replied to {{ post.data.to }}">
            {% assetIcon "reply" %}
            Replied to {{ post.data.to }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </article>

    {% elsif post.data.category == 'rsvp' %}
    <article class="reply h-entry hentry">
      <h2 class="p-name">
        <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="RSVP'd to {{ post.data.title }}">
          {% assetIcon "rsvp" %}
          RSVP'd to {{ post.data.title }}
        </a>
      </h2>
      <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
    </article>

    {% elsif post.data.category == 'videography' %}
      <article class="post h-entry hentry">
        <h2 class="p-name">
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="View video">
            {% assetIcon "video" %}
            {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </article>

    {% elsif post.data.category == 'photography' %}
      <article class="post h-entry hentry">
        <h2 class="p-name">
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="View photo">
            {% assetIcon "photo" %}
            {{ post.data.to }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </article>

    {% elsif post.data.category == 'checkin' %}
      <article class="checkin h-entry hentry">
        <h2 class="p-name">
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="Checked in on {{ post.date | dateLongDate }}">
            {% assetIcon "checkin" %}
            Checked in at {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </article>

    {% else %}
      <article class="h-entry hentry">
        <h2 class="p-name">
          <a class="post-link u-url" rel="bookmark" href="{{ post.url }}" title="View Item">
            {% assetIcon "unknown" %}
            {{ post.data.title }}
          </a>
        </h2>
        <time class="postlist-date dt-published" datetime="{{ post.date | dateHtmlString }}">{{ post.date | dateLongDate }}</time>
      </article>
    {% endif %}

  {%- endfor -%}

</div><!-- .post-list-content -->

<section class="pagination">
  <div class="pagination--content">
    <nav id="post--pagination" class="post--pagination" aria-labelledby="post--pagination">
      <div class="previous-posts">
        {% if pagination.href.previous %}
          <a href="{{ pagination.href.previous }}" title="Head to the future">« Newer Posts</a>
        {% endif %}
      </div><!-- .previous-posts -->
      <div class="next-posts">
        {% if pagination.href.next %}
          <a href="{{ pagination.href.next }}" title="Go back in time">Older Posts »</a>
        {% endif %}
      </div><!-- .next-posts -->
    </nav><!-- .post-pagination -->
  </div><!-- .pagination-content -->
</section><!-- .pagination -->
