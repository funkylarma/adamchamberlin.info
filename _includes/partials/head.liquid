<head>
  <meta charset="utf-8">
  
  <!-- Title and description -->
  <title>
    {% if title %}
      {{ title }} | {{ site.title }}
    {% elsif pagination.pageNumber != 0 %}
      {{ site.title }} | Archive - Page {{ pagination.pageNumber | plus: 1 }}
    {% else %}
      {{ site.title }} | {{ site.tagline }}
    {% endif %}
  </title>
  <meta name="description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}" />
  
  <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
  <meta name="generator" content="{{ eleventy.generator }}" built="{% currentBuildDate %}" />
  <meta name="robots" content="index, follow" />
  
  <link rel="canonical" href="{{ page.url | absoluteUrl }}" />
  
  <link rel="alternate" href="{{ site.feed.path | absoluteUrl }}" type="application/atom+xml" title="{{ site.title }}">
  <link rel="alternate" href="{{ site.jsonfeed.path | absoluteUrl }}" type="application/json" title="{{ site.title }}">

  <link rel="shortcut icon" href="{{ "/assets/images/favicon.png" | absoluteUrl }}" sizes="192x192" />
  
  <link rel="author" href="/humans.txt" />

  <link rel="stylesheet" href="/assets/css/screen.css" />
  
  <meta property="og:title" content="{% if title %}{{ title }}{% else %}{{ site.title }}{% endif %}" />
  <meta property="og:url" content="{{ page.url | absoluteUrl }}" />
  <meta property="og:description" content="{% if description %}{{ description }}{% else %}{{ site.description }}{% endif %}" />
  <meta property="og:image" content="{% if cover %}{{ cover | absoluteImageUrl }}{% else %}{{ '/assets/images/og.png' | absoluteUrl }}{% endif %}" />
  <meta property="og:type" content="article" />
  
  <!-- Google Tag Manager -->
  <script>(function(w,d,s,l,i){w[l]=w[l]||[];w[l].push({'gtm.start':
  new Date().getTime(),event:'gtm.js'});var f=d.getElementsByTagName(s)[0],
  j=d.createElement(s),dl=l!='dataLayer'?'&l='+l:'';j.async=true;j.src=
  'https://www.googletagmanager.com/gtm.js?id='+i+dl;f.parentNode.insertBefore(j,f);
  })(window,document,'script','dataLayer','GTM-KM52M2F');</script>
  <!-- End Google Tag Manager -->
  
</head>